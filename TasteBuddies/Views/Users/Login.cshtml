@model User


<div class="col-md-6 offset-lg-3 align-middle" style="margin-top: 25px">
	<h1 class=" justify-content-center">TasteBuddies Login</h1>
	<form method="post" action="/users/login">
		<div class="form-group">
			<label class="form-label" for="username">Username:</label>
			<input class="form-control" type="text" id="username" placeholder="Enter username" required name="username" />
		</div><br />
		<div class="form-group">
			<label class="form-label" for="password">Password:</label>
			<input class="form-control" type="password" id="password" placeholder="Enter password" required name="password" />
		</div><br />
		<div class="d-grid gap-2">
			<button class="btn btn-success" type="submit">Log In</button>
		</div>
	</form>
</div>
